<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, local: true) do |f| %>

    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title, placeholder: "Title of article" %> 
    </p>

    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description, placeholder: "Description" %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>