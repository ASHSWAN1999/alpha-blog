<h1 class="text-center mt-4">Log in</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

    <p>
        <%= f.label :email %> <br/>
        <%= f.email_field :email, placeholder: "Enter your email adress" %>
    </p>

    <p>
        <%= f.label :password %> <br/>
        <%= f.password_field :password, placeholder: "Enter your a pasword" %> 
    </p>

    <p>
        <%= f.submit "log in" %>
    </p>

<% end %>